// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id               String     @id @unique @default(uuid())
  name             String
  email            String     @unique
  document         String     @unique
  type             String
  password         String
  created_at       DateTime   @default(now())
  updated_at       DateTime   @updatedAt
  workouts         Workout[]
  personals        Personal[]
  personal_rating  Rating[]   @relation("personal_rating")
  user_valuer      Rating[]   @relation("user_valuer")
  students         Personal[] @relation("PersonalStudent")
  exercise         Exercise[]

  @@map("users")
}

model Workout {
  id         String   @id @unique @default(uuid())
  start_time DateTime @default(now())
  student    User     @relation(fields: [student_id], references: [id], onDelete: Cascade)
  student_id String

  @@map("workouts")
}

model Rating {
  id          String @id @unique @default(uuid())
  personal_id String
  personal    User   @relation("personal_rating", fields: [personal_id], references: [id])
  student_id  String
  student     User   @relation("user_valuer", fields: [student_id], references: [id])
  value       Int
}

model Personal {
  personal    User   @relation(fields: [personal_id], references: [id])
  personal_id String @id @unique @default(uuid())
  students    User[] @relation("PersonalStudent")
}

model Exercise {
  id          String   @id @unique @default(uuid())
  name        String
  duration    Int
  date        DateTime @default(now())
  personal_id String
  personal    User     @relation(fields: [personal_id], references: [id])
}
